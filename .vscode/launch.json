{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "TypeScript: Debug Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
      "runtimeArgs": [
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor"
      ],
      "pathMapping": {
        "/src": "${workspaceFolder}/frontend/src",
        "/@fs": "${workspaceFolder}"
      },
      "resolveSourceMapLocations": [
        "webRoot/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Python: 启动FastAPI服务",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
          "main:app",
          "--host",
          "0.0.0.0",
          "--port",
          "8080",
          "--reload"
      ],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
          "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "envFile": "${workspaceFolder}/config/.env.local"
  },
  {
    "name": "Celery: 启动Worker进程",
    "type": "debugpy",
    "request": "launch",
    "module": "celery",
    "args": [
        "-A",
        "app.services.tasks.celery_app",
        "worker",
        "--loglevel=info",
        "--concurrency=4",
        "--queues=default,quick,batch,maintenance"
    ],
    "cwd": "${workspaceFolder}/backend",
    "console": "integratedTerminal",
    "justMyCode": false,
    "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
    },
    "envFile": "${workspaceFolder}/config/.env.local"
  },
  {
    "name": "Celery: 启动Beat调度器",
    "type": "debugpy",
    "request": "launch",
    "module": "celery",
    "args": [
        "-A",
        "app.services.tasks.celery_app",
        "beat",
        "--loglevel=info",
        "--schedule=celerybeat-schedule"
    ],
    "cwd": "${workspaceFolder}/backend",
    "console": "integratedTerminal",
    "justMyCode": false,
    "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
    },
    "envFile": "${workspaceFolder}/config/.env.local"
  }
  ],
  "compounds": [
    {
      "name": "Python: 启动完整后端服务",
      "configurations": [
        "Python: 启动FastAPI服务",
        "Celery: 启动Worker进程",
        "Celery: 启动Beat调度器"
      ],
      "preLaunchTask": "install all dependencies",
      "stopAll": true
    }
  ]
}